#include "libft.h"
#include <limits.h>
#include <unistd.h>
#include <stdio.h>

void	ft_putnbr_fd(int n, int fd)
{
	unsigned int	num;

	if (n < 0)
	{
		ft_putchar_fd('-', 1);
		num = (n * -1);
	}
	else
		num = n;
	if (num >= 10)
	{
		ft_putnbr_fd((num / 10), fd);
	}
	ft_putchar_fd(((num % 10) + '0'), 1);
}

int	main(void)
{
	int	c = INT_MIN;
	int l = INT_MAX;
	
	ft_putnbr_fd(c, 1);
	write (1, "\n", 1);
	ft_putnbr_fd(l, 1);
	write (1, "\n", 1);
	printf ("%d\n%d\n", c, l);
}
